  <style>
    /* General Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f9;
      color: #333;
      line-height: 1.6;
    }

    /* Navbar Container */
    .navbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 10px 20px;
      background: linear-gradient(45deg, #1e120c, #c83720);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    /* Logo Section */
    .navbar .logo {
      display: flex;
      align-items: center;
      font-size: 24px;
      font-weight: bold;
      color: white;
      text-decoration: none;
    }

    .navbar .logo img {
      height: 40px;
      width: 40px;
      margin-right: 10px;
    }

    /* Navbar Links */
    .navbar .nav-links {
      display: flex;
      gap: 20px;
    }

    .navbar .nav-links a {
      text-decoration: none;
      color: white;
      font-size: 18px;
      font-weight: 500;
      padding: 8px 16px;
      border-radius: 5px;
      transition: background 0.3s ease;
    }

    .navbar .nav-links a:hover {
      background: rgba(255, 255, 255, 0.2);
    }

    /* Welcome Section */
    .welcome {
      text-align: center;
      margin: 50px 20px;
      padding: 20px;
      background: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      animation: fadeIn 1.5s ease-in-out;
    }

    .welcome h1 {
      font-size: 36px;
      color: #14981d;
    }

    .welcome p {
      font-size: 20px;
      color: #555;
    }

    /* Keyframes for fadeIn */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .navbar .nav-links {
        flex-direction: column;
        align-items: flex-start;
        background: rgba(0, 0, 0, 0.8);
        padding: 10px;
        border-radius: 5px;
        display: none;
        position: absolute;
        top: 60px;
        right: 20px;
      }

      .navbar .nav-links a {
        color: white;
        width: 100%;
      }

      .navbar .menu-toggle {
        display: block;
        cursor: pointer;
        font-size: 24px;
        color: white;
      }

      .navbar .menu-toggle.active + .nav-links {
        display: flex;
      }
    }

    .navbar .menu-toggle {
      display: none;
    }
  </style>
</head>
